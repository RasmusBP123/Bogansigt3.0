@using Microsoft.AspNetCore.Identity
@model IEnumerable<User>
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "My Friends";


}
<h1>@ViewData["Title"]</h1>
@if (Model.Count() > 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>
                    @if (UserManager.GetUserAsync(User).Result.Friends.Contains(item))
                    {
                        <a asp-action="FriendToggle" asp-route-friendId="@item.Id" asp-route-refferer="Friends">Remove Friend</a>
                    }
                    
                </td>
            </tr>
        }
    </tbody>

</table>
}
else
{
<p>No friends...  * Cricket noise *</p>
}
